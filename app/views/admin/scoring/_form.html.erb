<%= form_tag admin_scoring_score_path, method: 'post' do %>
    <%= hidden_field_tag :deployment_id, deployment_id %>
    <%= content_tag :fieldset, class: 'inputs' do %>
        <%= content_tag :ol do %>
            <% ml_scoring_params.each do |hash, record| %>
                <%= content_tag :li do %>
                    <%= label_tag record ? record.alias : hash['name']%>
                    <%= scoring_input hash, record %>
                <% end %>
            <% end %>
        <% end %>
    <% end %>
    <%= submit_tag 'Get Score' %>
<% end %>