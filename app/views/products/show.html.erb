<h1><%= @product.name %></h1>
<h4>by <%= @product.brand.name %></h4>
<%= content_tag :p, image_tag(@product.image.url, style: 'max-height: 500px') %>

<%= render @deals %>

<p>
  <%= price @product %>
</p>
<p>
  <% if @in_cart %>
    <%= link_to 'View in your Cart >', cart_path, class: 'btn btn-lg btn-primary' %>
  <% else %>
    <%= render partial: 'cart_button', locals: { product: @product, additional_product: @additional_product, price: @discount_price } %>
  <% end %>
</p>